#1067 Pseudo sorted Array
# cook your dish here
t = int(input())
for _ in range(t):
    n = int(input())
    a = list(map(int,input().split()))
    for i in range(n-1):
        if a[i]>a[i+1]:
            temp = a[i]
            a[i] = a[i+1]
            a[i+1] = temp
            break
    b = sorted(a)
    if b == a:
        print("YES")
    else:
        print("NO")
    
